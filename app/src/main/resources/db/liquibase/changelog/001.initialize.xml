<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

  <changeSet author="tom" id="reports-v1">
    <createTable tableName="reports">
      <column name="id" type="int">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="query_criteria_character_phrase" type="varchar(255)"/>
      <column name="query_criteria_planet_name" type="varchar(255)"/>
      <column name="character_id" type="int"/>
      <column name="character_name" type="varchar(255)"/>
      <column name="planet_id" type="int"/>
      <column name="planet_name" type="varchar(255)"/>
      <column name="film_id" type="int"/>
      <column name="film_name" type="varchar(255)"/>
    </createTable>
  </changeSet>

  <changeSet author="tom" id="reports-v2">
    <createTable tableName="reports_v2">
      <column name="id" type="int">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="query_criteria_character_phrase" type="varchar(255)"/>
      <column name="query_criteria_planet_name" type="varchar(255)"/>
    </createTable>
    <createTable tableName="report_entries_v2">
      <column name="id" type="int">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="report_id" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="character_id" type="int"/>
      <column name="character_name" type="varchar(255)"/>
      <column name="planet_id" type="int"/>
      <column name="planet_name" type="varchar(255)"/>
      <column name="film_id" type="int"/>
      <column name="film_name" type="varchar(255)"/>
    </createTable>
    <createSequence sequenceName="report_entries_v2_seq" startValue="1" incrementBy="1"/>

    <addForeignKeyConstraint baseTableName="reports_v2" baseColumnNames="id"
      constraintName="report_entry_v2_fk"
      referencedTableName="report_entries_v2" referencedColumnNames="report_id"/>
  </changeSet>

  <changeSet author="tom" id="reports-v3">
    <createTable tableName="reports_v3">
      <column name="id" type="int">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="query_criteria_character_phrase" type="varchar(255)"/>
      <column name="query_criteria_planet_name" type="varchar(255)"/>
    </createTable>
    <createTable tableName="report_entries_v3">
      <column name="id" type="int">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="report_id" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="character_id" type="int"/>
      <column name="character_name" type="varchar(255)"/>
      <column name="planet_id" type="int"/>
      <column name="planet_name" type="varchar(255)"/>
      <column name="film_id" type="int"/>
      <column name="film_name" type="varchar(255)"/>
    </createTable>
    <createSequence sequenceName="report_entries_v3_seq" startValue="1" incrementBy="1"/>

    <addForeignKeyConstraint baseTableName="reports_v3" baseColumnNames="id"
      constraintName="report_entry_v3_fk"
      referencedTableName="report_entries_v3" referencedColumnNames="report_id"/>
  </changeSet>
</databaseChangeLog>